{% extends "layout.html.jinja2" %}
{% from "baseframe/forms.html.jinja2" import renderform, ajaxform, widgetscripts %}
{% from "macros.html.jinja2" import edit_tabs %}

{% block headline %}{% endblock %}
{% block content %}
  {{ edit_tabs(tabs, g.website, g.folder, form) }}
  {{ renderform(form=form, formid=formid, ref_id=formid, submit=submit, message=message, cancel_url=cancel_url, multipart=multipart) }}
{% endblock %}

{% block footerscripts %}
  <script type="text/javascript">
    $(function() {
      {{ widgetscripts(form, script=false) }};
    });
  </script>
  {{ ajaxform(ref_id=formid, request=request, force=ajax) }}
{% endblock %}
