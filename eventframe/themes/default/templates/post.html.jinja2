{% extends theme("layout.html.jinja2") %}

{% block title %}{{ node.title }}{% endblock %}
{% block description %}{{ node.description }}{% endblock %}

{% block headline %}{% endblock %}
{% block content %}
<div class="row blog page-top">
  <div class="span7">
    <div class="page-header">
      <h1>{{ self.title() }} <small>{{ node.published_at|longdate }}</small></h1>
    </div>
    {{ node.content }}
    {#- <p class="author">{{ node.user.fullname }}</p> #}
  </div>
  {%- if "image" in node.properties or "video" in node.properties %}
    <div class="span5">
      {%- if "image" in node.properties %}
        <div class="row">
          <div class="span5 {{ node.properties.get('image-container-class', '') }}">
            {% if "image-link" in node.properties %}<a href="{{ node.properties['image-link'] }}">{% endif -%}
            <img src="{{ node.properties['image'] }}" alt="{{ node.properties.get('image-alt', 'Image') }}" class="{{ node.properties.get('image-class', '') }}"/>
            {%- if "image-link" in node.properties %}</a>{% endif %}
          </div>
        </div>
      {%- endif %} 
    </div>
  {%- endif %}
</div>
{% endblock %}
